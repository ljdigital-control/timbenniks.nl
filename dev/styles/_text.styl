body
  color: #222
  font-family: Georgia, serif
  margin: 0
  line-height: 1.8
  font-size: 100%

h1
h2
h3
h4
  font-weight: normal
  font-size: 1.5em
  line-height: 1.3
  color: #000
  margin: 0
  padding: 0

p
  margin: 0
  padding: 0

mark
  background: lighten( #9C0001, 60 )
  font-style: italic

a
  text-decoration: underline
  color: #9C0001

  &:hover
  &:focus
      text-decoration: none
      outline: none

figure
  margin: 0

.hide
  display: none