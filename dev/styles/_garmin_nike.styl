.garmin-nike
  .map-wrapper
    border: 1px solid #ccc
    padding: 0.3em
    box-sizing: border-box

  figcaption
    overflow: hidden
    
    [name="set"]
      float: right
      margin: 0 0 5px 0
    
    .run
      display: inline-block
      margin: 0 15px 0 0

  .run
    text-transform: capitalize
    
    span
      width: 12px
      height: 12px
      margin: 0 5px 0 0
      display: inline-block
      position: relative
      top: 1px

      &.garmin
        background: #9c0001

      &.nike
        background: #000

  .run-data
    overflow: hidden
    font-size: 70%
    color: rgba(0,0,0,0.4)
    font-style: italic
    margin: 0
    background: #fff
    padding: 0.6em 0.8em
    border: solid #ccc
    border-width: 0 1px 1px 1px
    box-sizing: border-box
    
    .run-data-type
      display: inline-block
      width: 50%
      margin: 0
      padding: 0
      list-style: none
      
  #map
    position: relative
    width: 100%
    height: 300px
