.garmin-nike
  .map-wrapper
    border: 1px solid #ccc
    padding: 0.3em
    box-sizing: border-box

  figcaption
    .run
      display: inline-block
      margin: 0 15px 0 0

      span
        width: 12px
        height: 12px
        margin: 0 5px 0 0
        display: inline-block

        &.garmin
          background: #9c0001

        &.nike
          background: #000

  #map
    position: relative
    width: 100%
    height: 600px
