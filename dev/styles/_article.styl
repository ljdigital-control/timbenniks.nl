.article
	.johnny
		width: 6em
		height: @width
		display: block
		margin: 2em auto 0

	a
		font-style: normal

	h1
		font-size: 1.6em
		line-height: 1.3
		margin: 0
		font-style: normal

	h2
		color: #9C0001
		font-size: 95%
		font-style: italic

	h3
		color: #9C0001
		font-size: 130%
		font-style: italic
		margin: 0 0 .5em 0

	p
		padding: 0 0 2em 0

	blockquote
		padding: 0 0 0 1em
		margin: 0 0 2em 0
		border-left: 0.5em solid #ddd

		p
			margin: 0
			padding: 0
			font-style: italic

	main
		width: auto
		position: static
		max-width: 1000px
		margin: 0 auto

	article
	header
		width: 80%
		margin: 2em auto
		text-align: left

	header
		text-align: center

	.author
		font-size: 70%
		color: rgba(0, 0, 0, 0.4)
		margin: 2em 0
		padding: 0 0 1em 0
		border-bottom: 1px solid rgba(0, 0, 0, 0.1)

	figure
		margin: 0 0 2em -5%
		width: 110%
		display: block

		&.strava-embed
			
			iframe
				display: none
				
			p.for-small-screens
				display: block
				border: 1px solid #ccc
				background: #fff
				padding: 1em
				font-size: 70%
				margin: 0.5em 0 0 0
		
		img
			display: block
			width: 100%
			height: auto
			border: 1px solid #ccc
			padding: 0.3em
			box-sizing: border-box

		figcaption
			font-size: 70%
			color: rgba(0, 0, 0, 0.4)
			margin: 0.5em 0 0 0
			font-style: italic
