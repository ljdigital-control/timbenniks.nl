main
  margin: 2em auto 0
  text-align: left
  width: 90%

  nav.links
    display: block
    font-size: 2.13em
    text-align: left
    margin: 0 0 2rem

    ul
      margin: 0
      padding: 0
      list-style: none

      li
        display: block
        line-height: 1

    h1
    h2
      color: #9C0001
      display: block
      font-size: 1.4em
      letter-spacing: 0.02em
      line-height: 1
      margin: 0 0 0.4em 0

    h2
      font-size: 0.8em
      margin: 0 0 0.2em 0

    a
      display: inline-block
      font-size: 1em
      font-style: italic
      letter-spacing: 0.02em
      line-height: 1.6
      opacity: 0.7
      text-decoration: none
      border-bottom: 1px dotted #9C0001
      color: #222

      &:hover
        opacity: 1

    &.alt
      a
        font-size: 0.5em

  nav.external-links
    margin: 0 0 4rem 0
    display: flex

    a
      text-decoration: none
      width: 1.3em
      height: 1.3em
      margin: 0 .6em 0 0

      &:hover .icon path
        opacity: 1

      .icon
        width: 100%
        height: auto
        display: block
        opacity: 0.8

        path
          fill: #222
          opacity: 0.6
