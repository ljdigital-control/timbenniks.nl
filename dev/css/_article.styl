.article

	header
		margin: 0 auto 2em

	a
		font-style: normal

	h1
		font-size: 1.6em
		line-height: 1.3
		margin: 0
		font-style: normal

	h2
		color: #9C0001
		font-size: 95%
		font-style: italic

	main
		width: auto
		position: static
		transform: translate(0, 0)
		max-width: 1000px
		margin: 0 auto

	article
		width: 80%
		margin: 0 auto 2em
		text-align: left

	figure
		margin: 0 0 2em -5%
		width: 110%
		display: block

		img
			display: block
			width: 100%
			height: auto
			border: 1px solid #ccc
			padding: 0.3em
			box-sizing: border-box

		figcaption
			font-size: 70%
			color: rgba(0, 0, 0, 0.4)
			margin: 0.5em 0 0 0
			font-style: italic